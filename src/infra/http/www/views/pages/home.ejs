<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs'); %>
<body>
	<header></header>
	<main class="space-y-4 flex justify-center items-center flex-col">
		<% newsArray.forEach(news => { %>
			<div class="border p-4 w-1/2">
				<div class="flex space-x-8 flex-col">
					<div class="border rounded-full w-12 h-12">
						
					</div>
					<div>
							<h1 class="text-lg"> <%- news.title %> </h1>
							<p class="text-sm"> <%- news.description %> </p>
					</div>
					<img src="<%- news.imageUrl %>" alt="image_url">
				</div>
				<div>

				</div>
			</div>
		<% }) %>
	</main>
</body>
</html>